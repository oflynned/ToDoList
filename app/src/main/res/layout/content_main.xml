<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/verticalLL"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp">


            <TextView
                android:text="@string/title"
                android:textSize="24sp"
                android:textColor="#ff00ff"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_weight="1" />

            <Button
                android:id="@+id/clearCompletedTasks"
                android:text="@string/clearCompleted"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:onClick="clearCompletedTasks" />

        </LinearLayout>

        <TextView
            android:text="@string/newTask"
            android:textSize="16dp"
            android:layout_marginLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/newDate"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:hint="@string/newDueDate"
                android:inputType="date"
                android:layout_weight="1.1" />

            <EditText
                android:id="@+id/newDescription"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:hint="@string/newDescription"
                android:layout_weight="2.9" />

            <Button
                android:text="@string/addNewTask"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:onClick="parseNewTask" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:text="@string/dueDate"
                android:textAlignment="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:text="@string/description"
                android:textAlignment="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:text="@string/completedyorn"
                android:textAlignment="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        </LinearLayout>

